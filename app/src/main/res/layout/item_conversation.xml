<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/x172"
    android:background="@drawable/bg_common_selector">

    <RelativeLayout
        android:layout_width="@dimen/x172"
        android:layout_height="@dimen/x172"
        android:layout_marginStart="@dimen/x20"
        android:layout_marginLeft="@dimen/x20">

        <ImageView
            android:id="@+id/conversation_avatar"
            android:layout_width="@dimen/x116"
            android:layout_height="@dimen/x116"
            android:layout_centerInParent="true"
            android:contentDescription="@null"
            android:scaleType="fitCenter"
            android:src="@drawable/gray" />

        <TextView
            android:id="@+id/conversation_badge"
            android:layout_width="@dimen/x50"
            android:layout_height="@dimen/x50"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/x10"
            android:layout_marginEnd="@dimen/x10"
            android:layout_marginRight="@dimen/x10"
            android:background="@drawable/bg_circle_red"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="@dimen/text_35"
            android:visibility="visible"
            tools:text="15" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/x20"
            android:layout_marginLeft="@dimen/x20"
            android:layout_marginEnd="@dimen/x20"
            android:layout_marginRight="@dimen/x20"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/conversation_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ellipsize="end"
                android:maxLines="1"
                android:textColor="@color/text_black"
                android:textSize="@dimen/text_45"
                tools:text="张三" />

            <TextView
                android:id="@+id/conversation_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/x40"
                android:layout_marginRight="@dimen/x40"
                android:maxLines="1"
                android:textColor="@color/text_description"
                android:textSize="@dimen/text_35"
                tools:text="12月30日" />
        </LinearLayout>

        <TextView
            android:id="@+id/conversation_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/x15"
            android:layout_marginLeft="@dimen/x15"
            android:layout_marginTop="@dimen/x10"
            android:layout_marginEnd="@dimen/x15"
            android:layout_marginRight="@dimen/x15"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:maxWidth="@dimen/x800"
            android:maxLines="1"
            android:paddingLeft="@dimen/x5"
            android:paddingRight="@dimen/x5"
            android:textColor="@color/text_description"
            android:textSize="@dimen/text_40"
            tools:text="吃饭了吗" />
    </LinearLayout>
</LinearLayout>